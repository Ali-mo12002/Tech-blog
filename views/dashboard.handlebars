<div id="dashboard-container">
    <h2 id="dash">dashboard</h2>
    <div class="dashboard-create">
        <h3>Create New Post</h3>
        <form class="create-post" id="create-post-form">
            <div class="form-group">
                <label for="post-title">Title:</label>
                <input type="text" id="post-title" name="post-title" required>
            </div>
            <div class="form-group">
                <label for="post-content">Content:</label>
                <textarea id="post-content" name="post-content" rows="5" required></textarea>
            </div>
            <button type="submit">Create Post</button>
        </form>
    </div>

    <div class="dashboard-create">
        <h3>Your Posts</h3>
        <ul id="user-posts-list">
        </ul>
    </div>
    <div id="editModal" class="modal">
        <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Edit Post</h2>
        <form id="editPostForm">
            <div>
            <label for="edit-post-title">Title</label>
            <input type="text" id="edit-post-title" required>
            </div>
            <div>
            <label for="edit-post-content">Content</label>
            <textarea id="edit-post-content" required></textarea>
            </div>
            <button type="submit">Save Changes</button>
        </form>
        </div>
    </div>
</div>
    <script src="/js/posts.js"></script>
